{
  "name": "action-github-pr-release",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub Action to create a 'release pull request'",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yutailang0119/action-github-pr-release.git"
  },
  "keywords": [
    "actions",
    "git-pr-relase"
  ],
  "author": "yutailang0119",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^16.3.0",
    "@typescript-eslint/parser": "^4.28.0",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^7.29.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.5",
    "jest-circus": "^27.0.3",
    "js-yaml": "^4.1.0",
    "prettier": "2.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  }
}
